<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:text="Get choice"
            android:fontFamily="@font/font_one"
            android:textSize="30dp"
            android:layout_height="wrap_content" />

        <ImageView

            android:layout_marginLeft="140dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/red_heart256"/>

        <TextView
            android:id="@+id/tv_cnt2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="3"
            android:fontFamily="@font/font_one"
            android:textSize="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <ImageView
            android:id="@+id/img_21"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/flowerartboard256"
            android:onClick="selected"/>
        <ImageView
            android:id="@+id/img_22"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="selected"
            android:src="@drawable/sunartboard256"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <ImageView
            android:id="@+id/img_23"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="selected"
            android:src="@drawable/pigartboard256"/>
        <ImageView
            android:id="@+id/img_24"
            android:layout_weight="1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="selected"
            android:src="@drawable/houseartboard256"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_accept2"
        android:layout_marginTop="110dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:text="PIG"
        android:fontFamily="@font/font_one"
        android:textSize="35dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="@drawable/bt_style"/>
</LinearLayout>